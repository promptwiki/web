---
interface Props {
  status: string;
  lang?: 'ko' | 'en';
}

const { status, lang = 'ko' } = Astro.props;

const labels: Record<string, Record<string, string>> = {
  ko: { draft: '초안', review: '검토 중', stable: '안정', recommended: '추천', deprecated: '지원 종료' },
  en: { draft: 'Draft', review: 'Review', stable: 'Stable', recommended: 'Recommended', deprecated: 'Deprecated' },
};

const colors: Record<string, string> = {
  draft: 'bg-gray-100 text-gray-600 dark:bg-gray-800 dark:text-gray-300',
  review: 'bg-yellow-100 text-yellow-700 dark:bg-yellow-900/30 dark:text-yellow-400',
  stable: 'bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-400',
  recommended: 'bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-400',
  deprecated: 'bg-red-100 text-red-600 dark:bg-red-900/30 dark:text-red-400',
};

const label = labels[lang]?.[status] ?? status;
const color = colors[status] ?? colors.draft;
---

<span class={`inline-flex items-center px-2 py-0.5 rounded text-xs font-medium ${color}`}>
  {status === 'recommended' && <span class="mr-1">★</span>}
  {label}
</span>
