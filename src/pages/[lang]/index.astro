const projectsWithCount: ProjectData[] = allProjects
  .filter((project: CollectionEntry<'projects'>) => project.data.lang === lang)
  .map((project: CollectionEntry<'projects'>) => {
    const projectVersions = allVersions.filter((v: CollectionEntry<'versions'>) =>
      v.id.startsWith(project.data.slug + '/')
    );
    return {
      ...project.data,
      iterationCount: projectVersions.length,
    };
  })
  .sort((a, b) => {
    if (a.status === 'completed' && b.status !== 'completed') return -1;
    if (a.status !== 'completed' && b.status === 'completed') return 1;
    return new Date(b.updatedAt).getTime() - new Date(a.updatedAt).getTime();
  });

